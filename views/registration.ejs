<% include header.ejs %>
  <form class="form-signin" method="post" action="/registration">
    <div class="panel periodic-login">
      <div class="panel-body text-center">
        <h1 class="atomic-symbol">
          <i class="fa fa-coffee" aria-hidden="true"></i>
        </h1>
        <% if (typeof registrationMessage != 'undefined' && registrationMessage) { %>
          <div class="alert alert-<%=ErrorState;%> fade in alert-dismissable">
            <%=registrationMessage;%>
          </div>
          <% } else if(typeof regMessage != 'undefined' && regMessage) {%>
            <div class="alert alert-<%=ErrorState;%> fade in alert-dismissable">
              <ul>
                <% regMessage.forEach(function(Message){%>
                  <li>
                    <%=Message.msg; %>
                  </li>
                  <% }); %>
              </ul>
            </div>
            <% }%>


              <div class="form-group form-animate-text" style="margin-top:40px !important;">
                <input type="text" class="form-text" name="first_name" value="">
                <span class="bar"></span>
                <label>First Name</label>
              </div>
              <div class="form-group form-animate-text" style="margin-top:40px !important;">
                <input type="text" class="form-text" name="last_name">
                <span class="bar"></span>
                <label>Last Name</label>
              </div>
              <div class="form-group form-animate-text" style="margin-top:40px !important;">
                <input type="text" class="form-text" name="email_id">
                <span class="bar"></span>
                <label>Email- Id</label>
              </div>
              <div class="form-group form-animate-text" style="margin-top:40px !important;">
                <input type="password" name="password" class="form-text">
                <span class="bar"></span>
                <label>Password</label>
              </div>
              <input type="submit" class="btn col-md-12" value="SignUp" />
      </div>
      <div class="text-center" style="padding:5px;">
        <a href="/login">Already have an account?</a>
      </div>
    </div>
  </form>
  <% include footer.ejs %>