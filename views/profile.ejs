<% include dashbaords/header.ejs %>
  <div class="col-md-12" style="padding:20px;">
    <div class="col-md-8 padding-0">
      <div class="col-md-8 padding-0">
        <div class="col-md-12">
          <div class="panel-heading">
            <% if (typeof message != 'undefined' && message) { %>
              <div class="alert alert-success">
                <%=message; %>
              </div>
              <% } %>
                <h4>
                  Update Profile
                </h4>
          </div>
          <form action="/userProfile/<%=userData[0].user_id; %>" method="post" encType="multipart/form-data">
            <div class="form-group">
                <%  if(typeof userData[0].user_img != 'undefined' && userData[0].user_img) { %>
                  <img src="/uploads/<%=userData[0].user_img; %>" class="img-circle" width="100" height="100" alt="Cinque Terre">
              <% } else {%>
                <img src="/img/avatar.jpg" class="img-circle" width="100" height="100" alt="Cinque Terre" />
                <% }%>
            </div>
            <div class="form-group">
              <label for="first_name">First Name:</label>
              <input type="text" class="form-control" id="first_name" name="first_name" value="<%=userData[0].first_name; %>">
            </div>
            <div class="form-group">
              <label for="last_name">Last Name:</label>
              <input type="text" class="form-control" id="last_name" name="last_name" value="<%=userData[0].last_name; %>">
            </div>
            <div class="form-group">
              <label for="email_id">Email address:</label>
              <input type="text" class="form-control" id="email" id="email_id" name="email_id" value="<%=userData[0].email_id; %>">
            </div>
            <div class="form-group">
              <input name="profileImg" class="btn fileupload-v1-btn" type="file">
            </div>
            <button type="submit" class="btn btn-default">Update</button>
          </form>
        </div>

      </div>
    </div>
    <% include dashbaords/rightsidebar.ejs %>
  </div>
  </div>
  <% include dashbaords/footer.ejs %>