<% include header.ejs %>
<form class="form-signin" method="post" action="/login">
  <div class="panel periodic-login">
    <div class="panel-body text-center">
      <h1 class="atomic-symbol">
        <i class="fa fa-coffee" aria-hidden="true"></i>
      </h1>
      <% if (typeof loginMessage != 'undefined' && loginMessage) { %>
        <div class="alert alert-danger fade in alert-dismissable">
          <%=loginMessage %>
        </div>
        <% } %>
          <div class="form-group form-animate-text" style="margin-top:40px !important;">
            <input type="text" class="form-text" name="email_id" required>
            <span class="bar"></span>
            <label>Email Id</label>
          </div>
          <div class="form-group form-animate-text" style="margin-top:40px !important;">
            <input type="password" name="password" class="form-text" required>
            <span class="bar"></span>
            <label>Password</label>
          </div>
          <input type="submit" class="btn col-md-12" value="Login" />
    </div>
    <div class="text-center" style="padding:5px;">
      <a href="/forgotpass">Forget Password</a>
    </div>
  </div>
</form>
<% include footer.ejs %>